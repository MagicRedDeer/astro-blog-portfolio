---
import { createPath } from '../../utils/path';

const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-50 border-t border-gray-200 py-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-lg font-semibold mb-4">Contact</h3>
        <p class="text-gray-600">
          Email: contact@example.com<br />
          Location: Your City, Country
        </p>
      </div>
      
      <div>
        <h3 class="text-lg font-semibold mb-4">Links</h3>
        <ul class="space-y-2">
          <li><a href={createPath('resume')} class="text-gray-600 hover:text-primary-600">Resume</a></li>
          <li><a href={createPath('blog')} class="text-gray-600 hover:text-primary-600">Blog</a></li>
          <li><a href={createPath('contact')} class="text-gray-600 hover:text-primary-600">Contact</a></li>
        </ul>
      </div>
      
      <div>
        <h3 class="text-lg font-semibold mb-4">Social</h3>
        <ul class="space-y-2">
          <li><a href="https://github.com" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-primary-600">GitHub</a></li>
          <li><a href="https://linkedin.com" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-primary-600">LinkedIn</a></li>
        </ul>
      </div>
    </div>
    
    <div class="mt-8 pt-8 border-t border-gray-200 text-center text-gray-600">
      <p>&copy; {currentYear} Your Name. All rights reserved.</p>
    </div>
  </div>
</footer>
